<div class="form-horizontal col-md-8 col-xs-12 col-md-offset-2">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <!--<p class="alert">-->
    <%= devise_error_messages! %>
    <!--</p>-->
    <div class="form-group">
      <%= f.label :name, "ユーザーネーム", class: 'control-label col-sm-3' %>
      <div class="col-sm-9"> 
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: 'control-label col-sm-3' %>
      <div class="col-sm-9">
        <%= f.email_field :email, class: 'form-control'%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード", class: 'control-label col-sm-3' %>
      <!--<% if @minimum_password_length %>-->
      <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
      <!--<% end %><br />-->
      <div class="col-sm-9">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control'%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード（確認）", class: 'control-label col-sm-3'%>
      <div class="col-sm-9">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :image, "プロフィール画像", class: 'control-label col-sm-3' %>
      <div class="col-sm-9">
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
      </div>
    </div>
  
    <div class="form-group">
      <%= f.label :profile, "プロフィール", class: 'control-label col-sm-3' %>
      <div class="col-sm-9">
      <%= f.text_area :profile, class: 'form-control' %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "登録する", class: 'btn btn-primary' %>
    </div>
  <% end %>
  <!--</div>-->
</div>